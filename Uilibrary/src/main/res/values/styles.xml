<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--NavigationActivity  主界面按钮样式-->
    <style name="Button_NavigationActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--售后信息-->
    <style name="TextView_SaleInf_Tittle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x35</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/lib_black_normal</item>
    </style>

    <style name="TextView_SaleInf_Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lib_black_reduce</item>
    </style>

    <style name="TextView_Line_Black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/lib_black_normal</item>
    </style>

    <style name="TextView_Line_Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/lib_black_split_line</item>
    </style>


    <style name="AnimationBottomFade">
        <item name="android:windowEnterAnimation">@anim/in_bottomtotop</item>
        <item name="android:windowExitAnimation">@anim/out_toptobottom</item>
    </style>

    <style name="Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="MyTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black_normal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>


    <!--电机库选择界面-->
    <style name="MotorParNameTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_reduce</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MotorParContentEdittext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_edittext_search_task</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MotorRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black_reduce</item>
    </style>

    <style name="TextView_Motor">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!--新建电机库 TextView Edittext-->
    <style name="TextView_New_Lib">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">#f7f7f7</item>
        <!--<item name="android:background">@drawable/bg_selectorr</item>-->
    </style>


    <style name="EditText_New_Lib">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">#0a0000</item>
        <item name="android:background">@drawable/selector_edittext_search_task</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <!-- 条形进度条 -->
    <style name="StyleProgressBarMini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_mini</item>
    </style>

    <style name="RadioButtonTestProjectChoose">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="background">?android:attr/windowBackground</item>
        <item name="android:textColor">@drawable/selector_textcolor_radiobutton</item>
    </style>


    <!-- dialog样式 -->
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>


    <!--测试界面RadioButton-->
    <style name="RadioButtonTest">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_textcolor_test_radiobutton</item>
        <item name="android:background">@drawable/selector_bg_test_radiobutton</item>
    </style>


    <!--任务信息 顶部输入框-->
    <style name="Edittext_TaskInf">
        <item name="android:layout_width">@dimen/x258</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/selector_edittext</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/black_hint</item>
        <item name="android:textColor">@color/black_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <!--锁定、保存-->
    <style name="CheckBoxTest">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_textcolor_test_radiobutton</item>
        <item name="android:background">@drawable/selector_bg_test_radiobutton_lock</item>
    </style>


    <!--参数设置界面-->
    <!--模块标题-->
    <style name="TextView_Module_Tittle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--参数名称-->
    <style name="TextView_Par_Name" parent="TextView_Module_Tittle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#010318</item>
        <item name="android:paddingRight">@dimen/x2</item>
        <!--<item name="android:shadowColor">#fe061200</item>-->
        <item name="android:shadowRadius">1.0</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextView_Par_Unit">
        <item name="android:layout_width">@dimen/x30</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/x2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#010318</item>
        <item name="android:paddingRight">@dimen/x2</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:gravity">start</item>
    </style>


    <style name="TextView_style2" parent="TextView_Module_Tittle">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_normal</item>
        <!--<item name="android:shadowColor">#fefdfdfd</item>-->
        <item name="android:shadowRadius">1.0</item>
    </style>


    <!--参数设置 LinearLayout-->
    <style name="LinearLayout_style" parent="AppTheme.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_biger</item>
        <item name="android:layout_marginRight">@dimen/spacing_biger</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!--分割线样式-->
    <style name="splite_line" parent="AlertDialog.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/x5</item>
        <item name="android:layout_marginBottom">@dimen/x5</item>
        <item name="android:background">@color/black_split_line</item>
    </style>


    <!--Spinner 样式-->
    <style name="spinner_style0">
        <item name="android:layout_width">@dimen/x65</item>
        <item name="android:layout_height">@dimen/x18</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/midnightblue</item>
        <item name="android:dropDownHeight">@dimen/x50</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:background">@drawable/bg_selector_edittext</item>
    </style>


    <!--Edittext 样式-->
    <!--测试参数输入-->
    <style name="Edittext_input_par">
        <item name="android:layout_width">@dimen/x65</item>
        <item name="android:layout_height">@dimen/x18</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/midnightblue</item>
        <item name="android:background">@drawable/bg_selector_edittext</item>
        <item name="android:inputType">numberDecimal</item>
        <!--<item name="android:background">@drawable/bg_edittext</item>-->
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>


    <!--参数设置界面-->
    <!--模块标题-->
    <style name="TextView_style0_par">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--参数名称-->
    <style name="TextView_style1_par" parent="TextView_style0_par">
        <item name="android:textSize">@dimen/textViewSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#010318</item>
        <item name="android:paddingRight">@dimen/x2</item>
        <!--<item name="android:shadowColor">#fe061200</item>-->
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextView_style2_par" parent="TextView_style0_par">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_normal</item>
        <!--<item name="android:shadowColor">#fefdfdfd</item>-->
        <item name="android:shadowRadius">1.0</item>
    </style>


</resources>
