<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="7dp"
    android:background="@color/white"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_item_task"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:text="1"
        android:background="@drawable/vector_drawable_circle_black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_task_name"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="山东枣矿集团柴里煤矿"
                android:textSize="16sp"
                android:textColor="@color/black_normal"
                />

            <TextView
                android:id="@+id/tv_item_task_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="水平100-12"
                android:textSize="14sp"
                android:textColor="@color/black_hint"
                />

        </LinearLayout>
        

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_item_task_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李四"
                android:textSize="14sp"
                android:textColor="@color/black_hint"
                android:layout_marginTop="@dimen/spacing_smaller"
                />

            <TextView
                android:id="@+id/tv_item_task_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018年07月31日09:59:43"
                android:layout_toRightOf="@id/tv_item_task_people"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:textColor="@color/black_hint"
                android:layout_marginTop="@dimen/spacing_smaller"
                />

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>
