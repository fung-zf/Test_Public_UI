<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_left_listview_item"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lib_white"
    android:paddingBottom="1dp"
    style="?android:attr/borderlessButtonStyle"
    >

    <TextView
        android:id="@+id/tv_item_tittle"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingRight="@dimen/spacing_normal"
        android:layout_gravity="start"
        android:background="@color/lib_black_split_line"
        />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="278dp"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingRight="@dimen/spacing_normal"
        android:background="@drawable/selector_navi_left_item"
        >

        <ImageView
            android:id="@+id/imv_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/lib_black_normal"
            android:layout_marginLeft="@dimen/spacing_biger"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/imv_item_icon"
            />

        <ImageView
            android:id="@+id/imv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow"
            />

    </RelativeLayout>

    <View
        android:id="@+id/tv_split"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:background="@drawable/shape_bg_split"
        android:visibility="visible"
        />

</LinearLayout>
