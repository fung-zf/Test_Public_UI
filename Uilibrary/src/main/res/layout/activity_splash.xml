<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    tools:context="com.xzkydz.function.splash.SplashActivity">


    <ImageView
        android:id="@+id/imv"
        android:layout_width="@dimen/x70"
        android:layout_height="@dimen/x70"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x100"
        android:src="@drawable/qyxx_logo" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x30"
        android:layout_below="@+id/imv"
        android:textSize="25sp"
        android:textColor="@color/lib_white"
        />

    <TextView
        android:id="@+id/tv_banben"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x60"
        android:textSize="14sp"
        />



    <TextView
        android:id="@+id/tv_law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:text="Copyright Â© 2018 KuangYi  Inc. All rights reserved"
        android:textSize="14sp"
        android:textColor="#1c1c1c"
        android:layout_marginBottom="@dimen/spacing_normal"
        />


</RelativeLayout>
