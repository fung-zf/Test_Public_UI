<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip"/>
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="@color/black_split_line"
                android:startColor="@color/black_split_line"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip"/>

                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/black_hint"
                    android:startColor="@color/black_hint"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/black_reduce"
                    android:startColor="@color/black_reduce"/>
            </shape>
        </clip>
    </item>
</layer-list>